<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <title>Movies</title>
    <style>
        /* Genel stil */
        body {
            background-color: #121212;
            color: #ffffff;
        }

        h1, h2, h3, h4, h5, h6 {
            color: #ffffff;
        }

        /* Navbar stil */
        .navbar {
            background-color: #333333;
        }

        .navbar a {
            color: #ffffff;
        }

        /* Container ve diğer elementler */
        .container {
            background-color: #1e1e1e;
            padding: 20px;
            border-radius: 5px;
        }

        .card {
            background-color: #2c2c2c;
            border: none;
            margin-bottom: 20px;
        }

        .card-body {
            color: #ffffff;
        }

        a {
            color: #bb86fc;
        }

        a:hover {
            color: #3700b3;
        }

        /* Button stil */
        .btn-primary {
            background-color: #bb86fc;
            border: none;
        }

        .btn-primary:hover {
            background-color: #3700b3;
        }

        /* Tablo stil */
        .table {
            color: #ffffff;
        }

        .table thead {
            background-color: #333333;
        }

        .table tbody {
            background-color: #2c2c2c;
        }

        /* Movie image stil */
        .movie-image {
            max-width: 100%;
            height: auto;
        }

        /* Movie trailer stil */
        .movie-trailer {
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <%- include('partials/nav') %>

    <div class="container mt-3">
        <h1>Ürünler</h1>
        <div class="row">
            <div class="col-12">
                <% urunler.forEach(urun => { %>
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= urun.title %></h5>
                            <p class="card-text"><%= urun.description %></p>
                            <img src="<%= urun.movie_image %>" alt="<%= urun.title %>" class="movie-image">
                            <div class="movie-trailer">
                                <%- include('partials/trailer', urun) %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

</body>
</html>
